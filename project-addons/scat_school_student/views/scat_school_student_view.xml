<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Window Action -->

    <!-- Student -->
    <record model="ir.actions.act_window" id="scat_school_student_list_action">
            <field name="name">Colegios-Alumnos</field>
            <field name="res_model">scat.school.student</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
    </record>

    <!--MENÃš -->
    <menuitem id="main_scat_school_student_menu" name="Colegios-Alumnos"/>
    <menuitem id="scat_school_student_menu" name="Colegios-Alumnos" parent="main_scat_school_student_menu" action="scat_school_student_list_action"/>

    <!-- VISTAS -->

    <!-- Vistas Alumno -->
    <!-- Vista Arbol -->
    <record model="ir.ui.view" id="scat_school_student_tree_view">
            <field name="name">scat_school.student.tree</field>
            <field name="model">scat.school.student</field>
            <field name="arch" type="xml">
                <tree string="School-Student">
                    <field name="school"/>
                    <field name="student"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
    </record>

    <!-- Vista Formulario -->
    <record model="ir.ui.view" id="scat_school_student_form_view">
        <field name="name">scat.school.student.form</field>
        <field name="model">scat.school.student</field>
        <field name="arch" type="xml">
            <form string="School-Student Form">
                <sheet>
                    <group>
                        <field name="school"/>
                        <field name="student"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
