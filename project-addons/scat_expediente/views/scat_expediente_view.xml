<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="scat_expediente_tree_view">
            <field name="name">scat.expediente.tree</field>
            <field name="model">scat.expediente</field>
            <field name="arch" type="xml">
                <tree string="Expediente">
                    <field name="n_expediente"/>
                    <field name="client"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="school_ids"/>

                </tree>
            </field>
    </record>

    <record model="ir.ui.view" id="scat_expediente_form">
            <field name="name">scat.expediente.form</field>
            <field name="model">scat.expediente</field>
            <field name="arch" type="xml">
                <form string="Expediente">
                    <group>
                    <field name="n_expediente"/>
                    <field name="client"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="school_ids"/>
                    </group>
                </form>
            </field>
    </record>



    <record model="ir.actions.act_window" id = "scat_expediente">
        <field name="name">scat.expediente</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scat.expediente</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- MenÃº barra superior -->
        <menuitem id="m_scat_expediente" name="Expediente"/>
        <menuitem id="submenu_scat_expediente" name="Expediente" action="scat_expediente" parent="m_scat_expediente"/>



</odoo>
